@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">

    @foreach (var produto in Model.Produtos)
            {
                <div class="col-sm-4">
                    <div class="card text-center" style="width: 18rem;">
                        <img class="card-img-top" src="/img/produto/@string.Concat(produto.IdProdto.ToString("D6"), ".jpg")" alt="Imagem de @produto.Nome">
                        <div class="card-header">
                            R$ @produto.Preco.ToString("F2")
                        </div>
                        <div class="card-body" style="height:124px;">
                            <h5 class="card-title">@produto.Nome</h5>
                            <p class="card-text">@produto.Descricao .</p>
                            
                        </div>
                        <div class="card-footer">
                            <div>
                            <a href="#" class="btn btn-primary">Adicionar ao carrinho</a>
                            <small class="text-muted">Estoque: @produto.Estoque</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
</div>
